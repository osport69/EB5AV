int pushincremento =2;
int pushdecremento =3;
int contador =0;
void setup(){
  pinMode(pushincremento, OUTPUT);
  pinMode(pushdecremento, OUTPUT);
  Serial.begin(9600);
}
void loop(){
  
    if(digitalRead(pushincremento)==HIGH){
      if (contador<100){
    contador++;
   Serial.println(contador);
    delay(500);
  }
}
  if(digitalRead(pushdecremento)==HIGH){
      if (contador>0){
    contador--;
   Serial.println(contador);
    delay(500);
  }
}
}
